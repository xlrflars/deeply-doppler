---
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "../layouts/IndexLayout.astro";
import "../styles/layout.scss";
import Pagination from "../components/pagination.astro";

interface PaginateFunction {
  (posts: Array<any>, options: { pageSize: number }): Promise<Array<any>>;
}

export async function getStaticPaths({
  paginate,
}: {
  paginate: PaginateFunction;
}) {
  const posts = await getCollection("releases");
  posts.sort((a, b) => +b.data.date - +a.data.date);

  return paginate(posts, {
    pageSize: 2,
  });
}

const { page } = Astro.props;
---

<Layout>
  <main>
    <h1 class="page_title">Product Updates</h1>
    <hr class="border-b" style="border-bottom:  1px solid rgb(31,  32,  35);" />
    <ul class="posts" transition:name="post">
      {
        page.data.map((post) => (
          <li class="post">
            <div class="version_wrapper">
              <div class="version_info">
                <a href={`/releases/${post.slug}`}>
                  <div class="version_number" style="font-size: large;">
                    {post.data.versionNumber}
                  </div>
                  <FormattedDate class="date" date={post.data.date} />
                </a>
              </div>
            </div>
            <div class="content">
              {post.render().then(({ Content }) => (
                <Content />
              ))}
            </div>
          </li>
        ))
      }
    </ul>
    <div>
      <Pagination
        prevUrl={page.url.prev}
        nextUrl={page.url.next}
        totalPages={page.url.totalPages}
        currentPage={page.url.currentPage}
      />
    </div>
  </main>
</Layout>
